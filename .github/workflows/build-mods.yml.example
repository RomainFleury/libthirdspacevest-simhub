# Example GitHub Actions workflow for building game mods
# Rename to build-mods.yml to enable
#
# Prerequisites:
# - Game DLLs (MelonLoader, Unity, etc.) stored as GitHub artifacts or in a private repo
# - Windows runner for building .NET Framework projects
#
# This workflow:
# 1. Checks out the repo
# 2. Downloads game dependencies (from cache/artifacts)
# 3. Builds each mod with MSBuild
# 4. Copies DLLs to mods/ directory
# 5. Uploads as artifacts (or commits to repo)

name: Build Game Mods

on:
  workflow_dispatch:  # Manual trigger
  push:
    paths:
      - 'simhub-plugin/**'

jobs:
  build-mods:
    runs-on: windows-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup MSBuild
        uses: microsoft/setup-msbuild@v2

      - name: Setup NuGet
        uses: NuGet/setup-nuget@v2

      # =====================================================================
      # IMPORTANT: You need to provide game DLLs somehow
      # Options:
      # 1. Store in a private repo and check out
      # 2. Store as encrypted artifacts
      # 3. Download from a secure location
      # =====================================================================
      
      # Example: Download from release artifacts
      # - name: Download MelonLoader dependencies
      #   uses: actions/download-artifact@v4
      #   with:
      #     name: melonloader-deps
      #     path: deps/melonloader
      
      # Example: Restore from cache
      # - name: Restore game DLLs from cache
      #   uses: actions/cache@v4
      #   with:
      #     path: deps/
      #     key: game-dlls-v1

      # =====================================================================
      # Build SimHub Plugin
      # =====================================================================
      - name: Build SimHub Plugin
        if: false  # Enable when dependencies are available
        run: |
          cd simhub-plugin
          nuget restore ThirdSpaceSimHub.sln
          msbuild ThirdSpaceSimHub.sln /p:Configuration=Release
          
          # Copy to mods directory
          mkdir -p ../mods/simhub
          cp ThirdSpaceSimHub/bin/Release/ThirdSpaceSimHub.dll ../mods/simhub/

      # =====================================================================
      # Upload built mods as artifacts
      # =====================================================================
      - name: Upload mod artifacts
        uses: actions/upload-artifact@v4
        with:
          name: game-mods
          path: mods/
          if-no-files-found: warn

